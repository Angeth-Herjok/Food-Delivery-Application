<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Map">

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="113dp"
        android:layout_height="59dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="287dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/ivBurger"
        android:layout_width="283dp"
        android:layout_height="123dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivArrow"
        app:srcCompat="@drawable/img_1" />

    <Button
        android:id="@+id/btnDelivery"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:background="#F30606"
        android:text="Delivery"
        android:textAllCaps="false"
        android:textColor="#FAFAF7F6"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/btnPick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBurger" />

    <Button
        android:id="@+id/btnPick"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="51dp"
        android:background="#F30606"
        android:text="Pick Up"
        android:textAllCaps="false"
        android:textColor="#FAFFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDelivery"
        app:layout_constraintTop_toBottomOf="@+id/ivBurger" />

    <ImageView
        android:id="@+id/ivMap"
        android:layout_width="238dp"
        android:layout_height="189dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/tvRadis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPick"
        app:srcCompat="@drawable/img_6" />

    <TextView
        android:id="@+id/tvRadis"
        android:layout_width="124dp"
        android:layout_height="97dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="15dp"
        android:text="Rudison Blu Nimule Road"
        android:textColor="#0E0E0E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivMap"
        app:layout_constraintTop_toBottomOf="@+id/btnPick" />

    <TextView
        android:id="@+id/tvOrder"
        android:layout_width="290dp"
        android:layout_height="52dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="70dp"
        android:text="Your order will be tready in"
        android:textColor="#0B0A0A"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMap" />

    <TextView
        android:id="@+id/tvMinutes"
        android:layout_width="173dp"
        android:layout_height="45dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="99dp"
        android:text="30 Minutes"
        android:textColor="#070303"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOrder" />

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="307dp"
        android:layout_height="57dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="46dp"
        android:background="#ED1111"
        android:text="Check Out"
        android:textColor="#050505"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMinutes" />
</androidx.constraintlayout.widget.ConstraintLayout>